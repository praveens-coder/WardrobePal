<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/itemNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/itemTypeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Item Type (SHIRT or PANTS)"
        android:layout_below="@id/itemNameInput"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/itemColorInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Item Color"
        android:layout_below="@id/itemTypeInput"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_below="@id/itemColorInput"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/suggestOutfitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggest Outfit"
        android:layout_below="@id/addItemButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/outputTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output will be displayed here"
        android:layout_below="@id/suggestOutfitButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
